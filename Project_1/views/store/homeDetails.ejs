
 <%- include('../partials/head') %>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-effect { backdrop-filter: blur(10px); }
        .hover-lift { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .hover-lift:hover { transform: translateY(-2px); }
    </style>
</head>
 

<body class="bg-gradient-to-br from-pink-100 via-blue-100 to-purple-100 min-h-screen"> 

    <%-include('../partials/nav') %>

   <main>
             <!-- Use the whole page, add scroll, and adjust nav bar overlap -->
             <style>
                html, body {
                  height: 100%;
                  margin: 0;
                  padding: 0;
                  box-sizing: border-box;
                  overflow: auto;
                }
                .content-wrapper {
                  padding-top: 80px;
                  min-height: 100vh;
                  box-sizing: border-box;
                }
                @media (max-width: 768px) {
                  .content-wrapper {
                    padding-top: 100px;
                  }
                }
             </style>
             <div class="content-wrapper w-full min-h-screen flex flex-col bg-gradient-to-br from-pink-100 via-blue-100 to-purple-100">
                <h1 class="text-2xl md:text-3xl font-bold text-center text-gray-800 mb-8 mt-10">Here is your home</h1>
                <main class="flex-1 flex items-center justify-center w-full">
                  <div class="w-full max-w-6xl mx-auto">
                    <div class="bg-white/90 rounded-3xl shadow-2xl border border-blue-100/40 overflow-hidden flex flex-col md:flex-row min-h-[600px]">
                      <!-- Image Section (Bigger) -->
                      <div class="md:w-2/3 w-full bg-gradient-to-br from-blue-100 to-purple-200 flex items-center justify-center relative min-h-[500px]">
                        <% if (home.photoUrl) { %>
                          <img src="/uploads/<%= home.photoUrl %>" alt="<%= home.HouseName %>" class="w-full h-[500px] object-cover transition-transform duration-500 hover:scale-105 rounded-t-3xl md:rounded-l-3xl md:rounded-tr-none shadow-md">
                        <% } else { %>
                          <div class="flex flex-col items-center justify-center w-full h-[500px] text-gray-300">
                            <svg class="w-24 h-24 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0V9a2 2 0 012-2h2a2 2 0 012 2v2.5"/>
                            </svg>
                            <span class="text-lg font-medium">No Image Available</span>
                          </div>
                        <% } %>
                        <% if (home.rating) { %>
                          <div class="absolute top-4 right-4 bg-green-400/90 rounded-full px-4 py-2 shadow-lg flex items-center gap-2">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967a1 1 0 00.95.69h4.175c.969 0 1.371 1.24.588 1.81l-3.38 2.455a1 1 0 00-.364 1.118l1.287 3.966c.3.922-.755 1.688-1.54 1.118l-3.38-2.454a1 1 0 00-1.175 0l-3.38 2.454c-.784.57-1.838-.196-1.54-1.118l1.287-3.966a1 1 0 00-.364-1.118L2.05 9.394c-.783-.57-.38-1.81.588-1.81h4.175a1 1 0 00.95-.69l1.286-3.967z"/>
                            </svg>
                            <span class="text-base font-bold text-white"><%= home.rating %></span>
                          </div>
                        <% } %>
                      </div>
                      <!-- Details Section -->
                      <div class="md:w-1/3 w-full p-8 flex flex-col justify-between min-h-[500px]">
                        <div>
                          <h2 class="text-3xl font-extrabold text-gray-800 mb-4 tracking-tight"><%= home.HouseName %></h2>
                          <div class="flex flex-wrap items-center gap-3 mb-6">
                            <div class="flex items-center gap-1 text-blue-500">
                              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                              </svg>
                              <span class="text-base font-medium"><%= home.Location ? home.Location : "Not specified" %></span>
                            </div>
                            <div class="flex items-center gap-1 text-green-600 ml-4">
                              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                              </svg>
                              <span class="text-base font-semibold">â‚¹<%= home.price %>/night</span>
                            </div>
                          </div>
                          <!-- Description Section -->
                          <div class="mb-8">
                            <h3 class="text-lg font-semibold text-gray-700 mb-2">Description</h3>
                            <p class="text-gray-800 text-base"><%= home.description ? home.description : "No description provided." %></p>
                          </div>
                          <!-- Features Section -->
                          <div class="mb-8">
                            <h3 class="text-lg font-semibold text-gray-700 mb-2">Features</h3>
                            <% if (home.features && home.features.length > 0) { %>
                              <ul class="list-disc list-inside text-gray-700 text-base space-y-1">
                                <% home.features.forEach(function(feature) { %>
                                  <li><%= feature %></li>
                                <% }); %>
                              </ul>
                            <% } else { %>
                              <p class="text-gray-500">No features listed.</p>
                            <% } %>
                          </div>
                          <!-- Amenities (visual) -->
                          <div class="grid grid-cols-2 gap-4">
                            <div class="flex items-center gap-2 bg-blue-50 rounded-lg p-3">
                              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16h6"/>
                              </svg>
                              <span class="text-sm text-gray-700">Self Check-in</span>
                            </div>
                            <div class="flex items-center gap-2 bg-green-50 rounded-lg p-3">
                              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2"/>
                              </svg>
                              <span class="text-sm text-gray-700">Great Value</span>
                            </div>
                          </div>
                        </div>
                    
                        <div class="mt-10">
                          <a href="/rules/<%=home._id %>" class=" text-center  text-blue-600 font-extrabold ml-3">
                          ðŸ“ƒDownload House Rules
                          </a>
                        </div>


                        <div class="mt-10">
                <%-include('../partials/addToFavourites' , {home : home}) %>
                          <a href="/homes/<%= home._id %>" class="w-full block text-center bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white font-semibold py-4 px-8 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-200 text-xl">
                            Book Now
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </main>
             </div>
</body>
</html>